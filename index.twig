{% include '_header.twig' %}

    <div id="site">
        <div class="home-postex" id="postex">
            <div class="clearfix animated fadeInUp" id="about-kerry">
                <a href="/about/" title="About"><img src="{{ paths.theme }}images/kerry.jpg"></a>

                <div class="content">
                    <h4>Hello, I'm Kerry.</h4>
                    <p class="larger">I'm a web developer at <a href="https://www.taskeasy.com">TaskEasy</a> in Salt Lake City.</p>
                    <p>I love working with technology, rock climbing, and gaming. Join me while I build some things and ramble about others.</p>
                </div>
            </div>

            <ul class="animated fadeInUp list-none" id="post-grid">

              {% setcontent records = "entries/latest/5" allowpaging %}
              {% for record in records %}
              <li>
                  <header class="entry-title">
                      <a href="{{ record.link }}" title="{{ record.title }}">
                        <div class="content">
                            <h2>{{ record.title }}</h2>
                            <p class="record-date">{{ record.datepublish|localdate("%A %B %e, %Y") }}</p>
                            <p class="oneliner">{{ record.excerpt(450) }}</p>
                        </div>
                      </a>
                  </header>
              </li>
              {% endfor %}

            </ul>

            <div class="view-more-posts">
                <h2>
                    <a href="entries" title="Post Archives">View more posts</a>
                </h2>
            </div>
        </div>

        <div class="photosection">
            <div class="photosection_content">
                <div class="imglist clearfix">
                    <a href="entry/ten-sleep-2015" title="Photos">
                        <div class="img-masonry last-icn morepics" style="background: url(https://lh3.googleusercontent.com/ABzWkjsY9o5fmzn1fPhcgadRQyDnCzjqU1xd3jQIvdk=w816-h1222-no) 0 0 no-repeat;background-position: 0px -160px;">
                            <div class="photo-description">
                                <p>Ten Sleep 2015</p>
                            </div>
                        </div>
                    </a>
                    <a href="/photos/" title="Photos">
                        <div class="img-masonry last-icn morepics" style="background: url(https://fbcdn-sphotos-e-a.akamaihd.net/hphotos-ak-xaf1/t31.0-8/p417x417/10604105_10152701112038573_1315326046290187976_o.jpg) 0 0 no-repeat">
                            <div class="photo-description">
                                <p>Psicobloc 2014</p>
                            </div>
                        </div>
                    </a>
                    <a href="/photos/" title="Photos">
                        <div class="img-masonry last-icn morepics" style="background: url(https://fbcdn-sphotos-e-a.akamaihd.net/hphotos-ak-xaf1/v/t1.0-9/1964826_10205363332306001_2659658447241193685_n.jpg?oh=da84a3f56255380072eba5bc2a085798&oe=5558389B&__gda__=1432017196_ef91061e69a9c70732faa584c965808c) 0 0 no-repeat">
                            <div class="photo-description">
                                <p>Thanksgiving 2014</p>
